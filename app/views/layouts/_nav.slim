#header
  section
    #nav-toggle
      = image_tag "sheep.png", class: 'front'
      = image_tag "close.png", class: 'back'
    #site-menu
      h2= link_to "Home", root_path
      h2= link_to "Learn more", about_path
      h2= link_to "Experiences", experiences_path
    .page-title
      h1 Everyman
    .user-ctrl
      -if logged_in?
        h3.dropdown
          .btn-dark.dropdown-toggle data-toggle="dropdown"
            = current_user.username
            span.caret<
          ul.dropdown-menu
            li= link_to user_path(current_user) do
              i.glyphicon.glyphicon-user>
              | Profile
            -if current_user.schedule == nil
              li= link_to new_schedule_path do
                i.glyphicon.glyphicon-calendar
                | Schedule
            -else
              li= link_to edit_schedule_path(current_user.schedule) do
                i.glyphicon.glyphicon-calendar
                | Schedule
            li= link_to logout_path, method: :delete do
              i.glyphicon.glyphicon-log-out>
              | Logout
      -else
        h3= link_to "Login", login_path, class: 'btn-dark'
    

          
